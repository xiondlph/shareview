{
  "name": "Shareview",
  "version": "1.0.0",
  "description": "Shareview review service",
  "main": "app.js",
  "scripts": {
    "server-dev-local-db": "better-npm-run server-dev-local-db",
    "server-dev": "better-npm-run server-dev",
    "build": "better-npm-run compile",
    "jsdoc": "better-npm-run jsdoc",
    "test": "jest",
    "lint-staged": "lint-staged",
    "eslint:fix": "eslint --fix",
    "git:add": "git add"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:xiondlph/shareview.git"
  },
  "author": "ismax <shukhrat@ismax.ru>",
  "betterScripts": {
    "server-dev-local-db": {
      "command": "node app",
      "env": {
        "NODE_ENV": "development",
        "DB_HOST": "localhost",
        "DB_PORT": 27017,
        "DB_AUTH": 0,
        "DEBUG": [
          "shareview:cluster",
          "shareview:index",
          "shareview:mongodb",
          "shareview:server",
          "express:*"
        ]
      }
    },
    "server-dev": {
      "command": "node app",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": [
          "shareview:cluster",
          "shareview:index",
          "shareview:mongodb",
          "shareview:server",
          "express:*"
        ]
      }
    },
    "compile": {
      "command": "node ./node_modules/babel-cli/bin/babel.js . --ignore compile,node_modules,__tests__,store,app.js,babel.js,env.js --out-dir compile"
    },
    "jsdoc": {
      "command": "node ./node_modules/jsdoc/jsdoc.js -c .jsdoc"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint:fix",
      "git:add"
    ]
  },
  "pre-commit": [
    // "lint-staged",
    // "test"
  ],
  "dependencies": {
    "body-parser": "^1.15.2",
    "crypto": "0.0.3",
    "debug": "^2.2.0",
    "ejs": "^2.5.1",
    "express": "^4.14.0",
    "express-session": "^1.14.0",
    "mongodb": "^2.2.4",
    "nedb": "^1.8.0",
    "nodemailer": "^2.5.0",
    "password-generator": "^2.0.2",
    "validator": "^5.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "better-npm-run": "0.0.10",
    "docdash": "^0.4.0",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "jest-cli": "^14.1.0",
    "jsdoc": "^3.4.0",
    "lint-staged": "^2.0.3",
    "pre-commit": "^1.1.3",
    "superagent": "^2.1.0",
    "supertest": "^2.0.0"
  }
}
